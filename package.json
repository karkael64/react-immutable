    "build-js-cjs": "tsc --project tsconfig.build.json --outDir dist/cjs --module commonjs",
    "prettier": "prettier --write src tests README.md"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
