    "global-jsdom": "^9.0.1",
    "jsdom": "^22.1.0",
    "prettier": "^2.8.8",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1"
  },
  "files": [
    "dist"
  ]
